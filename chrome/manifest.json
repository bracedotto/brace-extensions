{
  "manifest_version": 2,
  "name": "Brace",
  "description": "Save links to visit later",
  "version": "0.1.1",
  "icons": {
    "16": "img/logo16.png",
    "32": "img/logo32.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_icon": {
      "16": "img/logo16.png",
      "32": "img/logo32.png",
      "48": "img/logo48.png",
      "128": "img/logo128.png"
    },
    "default_title": "Save link to Brace"
  },
  "background": {
    "scripts": ["js/browser-polyfill.min.js", "js/background.js"]
  },
  "options_ui": {
    "page": "options.html"
  }
}
